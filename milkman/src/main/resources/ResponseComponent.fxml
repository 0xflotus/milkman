	<StackPane VBox.vgrow="ALWAYS">
		<children>
			<AnchorPane>
				<JFXTabPane fx:id="tabs" AnchorPane.topAnchor="1" AnchorPane.rightAnchor="1" AnchorPane.leftAnchor="1" AnchorPane.bottomAnchor="1" />
